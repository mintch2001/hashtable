        <Button x:Name="showClick" Content="Show" HorizontalAlignment="Left" Margin="467,222,0,0" VerticalAlignment="Top" Height="40" Width="140" Click="showClick_Click" />
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Margin="139,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="24"/>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Margin="141,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="24"/>
    </Grid>
</Window>
